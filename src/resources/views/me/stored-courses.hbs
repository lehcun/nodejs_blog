<div class='mt-4'>
    <h2>Khoas hojc cua toi</h2>
    <table class='table mt-4'>
        <thead>
            <tr>
                <th scope='col'>#</th>
                <th scope='col'>Tên khóa học</th>
                <th scope='col'>Trình độ</th>
                <th scope='col' colspan='5'>Thời gian tạo</th>
            </tr>
        </thead>
        <tbody>
            {{#each course}}
                <tr>
                    <th scope='row'>{{plus @index}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.level}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a href='/courses/{{this._id}}/edit' class='btn btn-primary'>Sửa</a>
                        <a href='' class='btn btn-danger'>Xóa</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>